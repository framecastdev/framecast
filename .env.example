# Framecast API Configuration Template
# Copy this file to .env and fill in your actual values

# ============================================================================
# CORE APPLICATION SETTINGS
# ============================================================================

RUST_LOG=framecast=debug,sqlx=warn
PORT=3000

# Application base URL (used in invitation links, emails)
APP_BASE_URL=http://localhost:3000

# CORS allowed origins (comma-separated). Required in Lambda; defaults to
# http://localhost:3000 for local dev.
CORS_ALLOWED_ORIGINS=http://localhost:3000

# ============================================================================
# DATABASE (Backing Service IV)
# ============================================================================

DATABASE_URL=postgresql://postgres:password@localhost:5432/framecast_dev

# ============================================================================
# AUTHENTICATION
# ============================================================================

# JWT Configuration (required)
JWT_SECRET=your-jwt-secret-key
JWT_ISSUER=framecast
JWT_AUDIENCE=framecast-api

# ============================================================================
# EMAIL (AWS SES)
# ============================================================================

# Email provider: "ses" or "mock"
EMAIL_PROVIDER=mock
EMAIL_ENABLED=false
FROM_EMAIL=invitations@framecast.app

# AWS Configuration (required when EMAIL_PROVIDER=ses)
AWS_REGION=us-east-1
# AWS_ENDPOINT_URL=http://localhost:4566  # LocalStack only

# ============================================================================
# LLM (Anthropic Claude)
# ============================================================================

# LLM provider: "anthropic" or "mock"
LLM_PROVIDER=mock
ANTHROPIC_API_KEY=your-anthropic-api-key
ANTHROPIC_MODEL=claude-sonnet-4-20250514
LLM_MAX_TOKENS=4096
# ANTHROPIC_BASE_URL=https://api.anthropic.com  # Optional override

# ============================================================================
# TESTING
# ============================================================================

TEST_DATABASE_URL=postgresql://postgres:password@localhost:5432/framecast_test
TEST_JWT_SECRET=test-jwt-secret
TEST_API_BASE_URL=http://localhost:3000

# ============================================================================
# INNGEST (Event-Driven Workflow Orchestration)
# ============================================================================

# Inngest provider: "inngest" or "mock"
INNGEST_PROVIDER=mock
INNGEST_EVENT_KEY=dev-event-key-framecast-local
INNGEST_BASE_URL=http://localhost:8288
# INNGEST_SIGNING_KEY=dev-signing-key-framecast-local

# ============================================================================
# RENDER SERVICE (RunPod GPU Compute)
# ============================================================================

# Render provider: "runpod" or "mock"
RENDER_PROVIDER=mock
RENDER_CALLBACK_BASE_URL=http://localhost:3000
